    # default settings
    defaults
    tls on
    logfile ~/.msmtp.log

    # accesso account
    account marc.coury@accesso.com
    host smtp.office365.com
    port 587
    protocol smtp
    auth on
    from marc.coury@accesso.com
    user marc.coury@accesso.com
    #tls_certcheck off
    tls_starttls on
    tls_trust_file /etc/ssl/cert.pem
    passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/.msmtp-password.gpg"

    account default : marc.coury@accesso.com
